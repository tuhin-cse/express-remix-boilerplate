{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "../build/server",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}